{
  "name": "mediasoup-app",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run backend:dev\" \"npm run frontend:dev\"",
    "server:dev": "nodemon backend/app.js",
    "client:dev": "cd frontend && npm run dev",
    "build": "cd frontend && npm run build",
    "start": "node backend/app.js"
  },
  "dependencies": {
    "express": "^5.1.0",
    "httpolyglot": "^0.1.2",
    "mediasoup": "^3.16.0",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.10"
  }
}